{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	Login
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">

			<form action="{{ path("app_validation",{"id":id}) }}" method="post" enctype="application/x-www-form-urlencoded">
				<fieldset>
					<legend>Entrer votre code google sur l'application google authentificateur</legend>
					<div class="form-group row"></div>
					<div class="form-group">
						<label for="code">Code google</label>
						<input class="form-control" id="token" name="codeGoogle" aria-describedby="codeHelp" placeholder="" type="password">
					</div>


					<button type="submit" name="valider" class="btn btn-primary">Envoyer</button>
				</fieldset>
			</form>
		</div>
	</div>
{% endblock %}
